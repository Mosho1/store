{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "outDir": "build",
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/tests"
    ],
    "compileOnSave": true
}